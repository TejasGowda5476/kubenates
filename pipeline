pipeline {
    agent any
    environment {
        APP_NAME = "myapp"
        RELEASE = "4.0"
        DOCKER_USR = "devops5476"
        DOCKERHUB_CREDENTIALS = credentials('k1')
        IMAGE_TAG = "${RELEASE}-${BUILD_NUMBER}"
    }
    stages {
        stage("checkout") {
            steps {
                checkout scm
            }
        }
        stage("build") {
            steps {
                sh "mvn clean package"
            }
        }
        stage("test") {
            steps {
                sh "mvn test"
                sh "ls /var/lib/jenkins/workspace/${JOB_NAME}/webapp/target/"
            }
        }
        stage("build image") {
            steps {
                echo "Building Docker image with tag: ${IMAGE_TAG}"
                sh "docker build -t ${DOCKER_USR}/${APP_NAME}:${IMAGE_TAG} ."
            }
        }
        stage("push images") {
            steps {
                echo "DOCKER_USR: ${DOCKER_USR}"
                echo "APP_NAME: ${APP_NAME}"
                echo "BUILD_NUMBER: ${BUILD_NUMBER}"
                echo "DOCKERHUB_CREDENTIALS: ${DOCKERHUB_CREDENTIALS}"
                sh "docker images"
                sh "echo ${DOCKERHUB_CREDENTIALS_PSW} | docker login -u ${DOCKERHUB_CREDENTIALS_USR} --password"
                echo "Pushing Docker image with tag: ${IMAGE_TAG}"
                sh "docker push ${DOCKER_USR}/${APP_NAME}:${IMAGE_TAG}"
            }
        }
    }
}
